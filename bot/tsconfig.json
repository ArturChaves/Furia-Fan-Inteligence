{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["app/*"],
      "@core/*": ["core/*"],
      "@utils/*": ["utils/*"],
      "@domain/*": ["domain/*"],
      "@queue/*": ["queue/*"]
    },
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist", "tests"]
}